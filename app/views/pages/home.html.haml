%h1 Ocean Candy

= form_for user do |f|
  %fieldset
    %dl
      %dt= f.label :phone, "Phone Number"
      %dd= f.text_field :phone, placeholder: "555-123-4567"
    %dl
      %dt= f.label :station_id, "Tide location"
      %dd
        = f.select :station_id,
          grouped_options_for_select(Noaa::Station.select_options),
          prompt: "Select a station"

  %fieldset.actions
    = f.submit "Sign up"
